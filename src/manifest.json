{
  "manifest_version": 2,
  "name": "<%= name %>",
  "description": "<%= description %>",
  "version": "<%= version %>",
  "icons": {
    "128": "img/appIcon.png"
  },
  "background": {
    "scripts": [
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*"
      ],
      "js": [
        "js/content.js"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_popup": "html/popup.html"
  },
  "web_accessible_resources": [
  ]
}
